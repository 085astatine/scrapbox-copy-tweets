{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "baseUrl": "./",
    "module": "commonjs",
    "paths": {
      "@icon/*": ["src/icon/*"],
      "@lib/*": ["src/lib/*"]
    },
    "rootDir": "src",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es6"
  },
  "include": ["src/**/*"]
}
