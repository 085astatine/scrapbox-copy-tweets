{
  "manifest_version": 3,
  "name": "Scrapbox Copy Tweets",
  "version": "_",

  "__chrome|prod__permissions": [
    "clipboardWrite",
    "offscreen",
    "storage",
    "tabs"
  ],
  "__chrome|dev__permissions": [
    "clipboardWrite",
    "cookies",
    "downloads",
    "offscreen",
    "storage",
    "tabs"
  ],
  "__firefox|prod__permissions": ["clipboardWrite", "storage", "tabs"],
  "__firefox|dev__permissions": [
    "clipboardWrite",
    "cookies",
    "downloads",
    "storage",
    "tabs"
  ],
  "__prod__host_permissions": ["https://*/*"],
  "__dev__host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*/*"
  ],

  "__chrome__background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "__firefox__background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "run_at": "document_start",
      "js": ["content-twitter.js"],
      "css": ["content-twitter.css"]
    },
    {
      "matches": ["https://scrapbox.io/*", "https://cosen.se/*"],
      "run_at": "document_start",
      "js": ["content-scrapbox.js"],
      "css": ["content-scrapbox.css"]
    }
  ],

  "action": {},

  "web_accessible_resources": [
    {
      "resources": ["cosense.png"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://scrapbox.io/*",
        "https://cosen.se/*"
      ]
    }
  ],

  "__chrome__minimum_chrome_version": "116"
}
