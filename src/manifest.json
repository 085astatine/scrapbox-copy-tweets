{
  "manifest_version": 3,
  "name": "Scrapbox Copy Tweets",
  "version": "_",

  "__prod__permissions": ["storage", "tabs"],
  "__dev__permissions": ["cookies", "storage", "tabs"],
  "__prod__host_permissions": ["https://api.twitter.com/2/*"],
  "__dev__host_permissions": [
    "https://twitter.com/*",
    "https://api.twitter.com/2/*"
  ],

  "__chrome__background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "__firefox__background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "run_at": "document_start",
      "js": ["content-twitter.js"],
      "css": ["content-twitter.css"]
    },
    {
      "matches": ["https://scrapbox.io/*"],
      "run_at": "document_start",
      "js": ["content-scrapbox.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
