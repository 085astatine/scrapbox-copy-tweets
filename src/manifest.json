{
  "__chrome__manifest_version": 3,
  "__firefox__manifest_version": 2,
  "name": "Scrapbox Copy Tweets",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content-twitter.js"]
    }
  ]
}
